# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# JWT Configuration (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=your_secret_key_here_change_in_production

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=colegio_db
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/colegio_db

# CORS Origins (comma-separated, use * for dev or specific domains for prod)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Frontend API URL
REACT_APP_API_URL=http://localhost:5000/api

# ==========================
# Upload Configuration
# ==========================
# Method: "cloudinary" or "local"
UPLOAD_METHOD=local

# Cloudinary Configuration (only if UPLOAD_METHOD=cloudinary)
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==========================
# Email Notifications
# ==========================
# Email donde llegar√°n los mensajes de contacto
ADMIN_EMAIL=admin@yourdomain.com

# Resend API Key (get from: https://resend.com/api-keys)
# Free tier: 100 emails/day
RESEND_API_KEY=re_your_api_key_here
